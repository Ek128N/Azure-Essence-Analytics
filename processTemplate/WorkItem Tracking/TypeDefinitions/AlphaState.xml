<witd:WITD application="Work item type editor" version="1.0" xmlns:witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">  
       <WORKITEMTYPE name="Essence State" refname="HITS.Essence.State">  
          <DESCRIPTION>A state expresses a situation where some condition holds.</DESCRIPTION>
          <FIELDS>
            <FIELD name="Title" refname="System.Title" type="String">
              <REQUIRED />
            </FIELD>
            <FIELD name="Description" refname="System.Description" type="HTML">
              <REQUIRED />
            </FIELD>
            <FIELD name="Stack Rank" refname="Microsoft.VSTS.Common.StackRank" type="Double">
              <HELPTEXT>Work first on items with lower-valued stack rank.</HELPTEXT>
            </FIELD>
            <FIELD name="Order" refname="HITS.Essence.StateOrder" type="Integer">
              <REQUIRED />
            </FIELD>
          </FIELDS> 
          <WORKFLOW>
            <STATES>
              <STATE value="New">
                <FIELDS>
                  <FIELD refname="System.Title">
                    <FROZEN />
                  </FIELD>
                  <FIELD refname="System.Description">
                    <FROZEN />
                  </FIELD>
                  <FIELD refname="HITS.Essence.StateOrder">
                    <FROZEN />
                  </FIELD>
                </FIELDS>
              </STATE>
              <STATE value="Active">
                <FIELDS>
                  <FIELD refname="System.Title">
                    <READONLY />
                  </FIELD>
                  <FIELD refname="System.Description">
                    <READONLY />
                  </FIELD>
                  <FIELD refname="HITS.Essence.StateOrder">
                    <READONLY />
                  </FIELD>
                </FIELDS>
              </STATE>
              <STATE value="Closed">
                <FIELDS>
                  <FIELD refname="System.Title">
                    <READONLY />
                  </FIELD>
                  <FIELD refname="System.Description">
                    <READONLY />
                  </FIELD>
                  <FIELD refname="HITS.Essence.StateOrder">
                    <READONLY />
                  </FIELD>
                </FIELDS>
              </STATE>
            </STATES>
            <TRANSITIONS>
              <TRANSITION from="" to="New">
                <REASONS>
                  <DEFAULTREASON value="Created" />
                </REASONS>
              </TRANSITION>
              <TRANSITION from="New" to="Active">
                <REASONS>
                  <DEFAULTREASON value="Active" />
                </REASONS>
              </TRANSITION>
              <TRANSITION from="New" to="Closed">
                <REASONS>
                  <DEFAULTREASON value="Closed" />
                </REASONS>
              </TRANSITION>
              <TRANSITION from="Active" to="Closed">
                <REASONS>
                  <DEFAULTREASON value="Closed" />
                </REASONS>
              </TRANSITION>
            </TRANSITIONS>
          </WORKFLOW>
          <FORM>
            <Layout>
              <Control FieldName="System.Description" Type="FieldControl" Label="Description" />
              <Control FieldName="HITS.Essence.StateOrder" Type="FieldControl" Label="Order" />
            </Layout>
          </FORM>
       </WORKITEMTYPE>  
</witd:WITD>  