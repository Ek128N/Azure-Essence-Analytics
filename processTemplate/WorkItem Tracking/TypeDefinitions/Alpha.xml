<witd:WITD application="Work item type editor" version="1.0" xmlns:witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">  
       <WORKITEMTYPE name="Essence Alpha" refname="HITS.Essence.Alpha">  
          <DESCRIPTION>An essential element of the software engineering endeavor that is relevant to an assessment of the progress and health of the endeavor.</DESCRIPTION>
          <FIELDS>
            <FIELD name="Title" refname="System.Title" type="String">
              <REQUIRED />
            </FIELD>
            <FIELD name="Description" refname="System.Description" type="HTML">
              <REQUIRED />
            </FIELD>
            <FIELD name="Stack Rank" refname="Microsoft.VSTS.Common.StackRank" type="Double">
              <HELPTEXT>Work first on items with lower-valued stack rank.</HELPTEXT>
            </FIELD>
          </FIELDS>
          <WORKFLOW>
            <STATES>
              <STATE value="Active">
                <FIELDS>
                  <FIELD refname="System.Title">
                    <FROZEN />
                  </FIELD>
                  <FIELD refname="System.Description">
                    <FROZEN />
                  </FIELD>
                </FIELDS>
              </STATE>
              <STATE value="Closed">
                <FIELDS>
                  <FIELD refname="System.Title">
                    <READONLY />
                  </FIELD>
                  <FIELD refname="System.Description">
                    <READONLY />
                  </FIELD>
                </FIELDS>
              </STATE>
            </STATES>
            <TRANSITIONS>
              <TRANSITION from="" to="Active">
                <REASONS>
                  <DEFAULTREASON value="Active" />
                </REASONS>
              </TRANSITION>
              <TRANSITION from="Active" to="Closed">
                <REASONS>
                  <DEFAULTREASON value="Closed" />
                </REASONS>
              </TRANSITION>
              <TRANSITION from="Closed" to="Active">
                <REASONS>
                  <DEFAULTREASON value="UnClosed" />
                </REASONS>
              </TRANSITION>
            </TRANSITIONS>
          </WORKFLOW>
          <FORM>
            <Layout>
              <Control FieldName="System.Description" Type="FieldControl" Label="Description"/>
            </Layout>
          </FORM>
       </WORKITEMTYPE>  
</witd:WITD>  