            <FIELD name="Title" refname="System.Title" type="String">
              <REQUIRED />
            </FIELD>
            <FIELD name="Description" refname="System.Description" type="HTML" />
          </FIELDS>
          <WORKFLOW>
            <STATES>
              <STATE value="New" />
            </STATES>
            <TRANSITIONS>
              <TRANSITION from="" to="New">
