<?xml version="1.0" encoding="utf-8"?>
<WorkItemQuery Version="1">
  <Wiql>
    SELECT [System.Id],
           [System.State], 
           [System.Title] 
      FROM WorkItems
     WHERE
          (
            [Source].[System.TeamProject] = @project
            AND [Source].[System.WorkItemType] = 'Essence ActivityDefinition'
          )
  </Wiql>
</WorkItemQuery>